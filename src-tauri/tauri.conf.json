{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "BuildForge",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$HOME/**", "$APPDATA/**", "$LOCALAPPDATA/**"]
      },
      "path": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": true
      },
      "http": {
        "all": true,
        "scope": ["https://*", "http://*"]
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$HOME/**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "buildforge",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "DeveloperTool",
      "shortDescription": "Cross-platform build orchestration tool",
      "longDescription": "BuildForge is a node-based build orchestration tool that lets you create visual build workflows and run them on remote servers across Linux, macOS, and Windows.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "deb": {
        "depends": []
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "BuildForge",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "center": true,
        "fullscreen": false
      }
    ],
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  }
}
