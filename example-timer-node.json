{
  "id": "timer-schedule",
  "name": "Timer/Schedule",
  "description": "Run workflow on a schedule - hourly, daily, or weekly",
  "version": "1.0.0",
  "author": "BuildForge",
  "category": "trigger",
  "icon": "clock",
  "color": "#10b981",
  "inputs": [
    {
      "id": "enabled",
      "label": "Enabled",
      "type": "boolean",
      "default": true,
      "required": true
    },
    {
      "id": "mode",
      "label": "Schedule Mode",
      "type": "select",
      "options": [
        { "value": "interval", "label": "Run Every X Hours" },
        { "value": "daily", "label": "Daily at Specific Time" },
        { "value": "weekly", "label": "Weekly on Specific Day" },
        { "value": "combined", "label": "Combined (Day + Time)" }
      ],
      "default": "interval",
      "required": true
    },
    {
      "id": "intervalHours",
      "label": "Interval (hours)",
      "type": "number",
      "default": 1,
      "min": 0.016,
      "max": 168,
      "step": 0.25,
      "showWhen": { "mode": ["interval"] }
    },
    {
      "id": "time",
      "label": "Time (24h format)",
      "type": "time",
      "default": "09:00",
      "showWhen": { "mode": ["daily", "combined"] }
    },
    {
      "id": "dayOfWeek",
      "label": "Day of Week",
      "type": "select",
      "options": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ],
      "default": "Monday",
      "showWhen": { "mode": ["weekly", "combined"] }
    }
  ],
  "outputs": [
    {
      "id": "triggered",
      "label": "Triggered",
      "type": "boolean"
    },
    {
      "id": "timestamp",
      "label": "Trigger Time",
      "type": "string"
    }
  ],
  "execution": {
    "type": "timer",
    "enabled": "{{inputs.enabled}}",
    "mode": "{{inputs.mode}}",
    "intervalHours": "{{inputs.intervalHours}}",
    "time": "{{inputs.time}}",
    "dayOfWeek": "{{inputs.dayOfWeek}}"
  }
}
