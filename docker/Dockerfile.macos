# BuildForge macOS Cross-Compile Container (ARM64 compatible)
# Uses messense/cargo-zigbuild for OSXCross support
FROM --platform=linux/arm64 messense/cargo-zigbuild:latest

# Install Node.js using system package manager
RUN apt-get update && \
    apt-get install -y --no-install-recommends nodejs npm git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/*

WORKDIR /workspace
CMD ["/bin/bash"]
